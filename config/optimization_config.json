{
  "video_optimization": {
    "description": "视频生成优化配置",
    "hardware_acceleration": {
      "type": "string",
      "options": ["none", "nvenc", "qsv", "amf", "videotoolbox"],
      "default": "none",
      "description": "硬件加速类型，根据系统支持自动选择"
    },
    "encoding_preset": {
      "type": "string", 
      "options": ["ultrafast", "superfast", "veryfast", "faster", "fast", "medium", "slow", "slower", "veryslow"],
      "default": "medium",
      "description": "编码预设，ultrafast最快但文件大，veryslow最慢但文件小"
    },
    "crf_value": {
      "type": "integer",
      "range": [18, 28],
      "default": 23,
      "description": "质量因子，18-28范围，越小质量越好但文件越大"
    },
    "tune_setting": {
      "type": "string",
      "options": ["film", "animation", "grain", "stillimage", "fastdecode", "zerolatency"],
      "default": "film",
      "description": "调优设置，根据内容类型选择"
    },
    "thread_count": {
      "type": "integer",
      "range": [1, 16],
      "default": 0,
      "description": "CPU线程数，0表示自动检测"
    },
    "batch_size": {
      "type": "integer",
      "range": [1, 10],
      "default": 1,
      "description": "批量处理时的并发数"
    }
  },
  "performance_profiles": {
    "speed_priority": {
      "name": "速度优先",
      "description": "最快生成速度，文件较大",
      "settings": {
        "hardware_acceleration": "auto",
        "encoding_preset": "ultrafast",
        "crf_value": 28,
        "tune_setting": "fastdecode"
      }
    },
    "balanced": {
      "name": "平衡模式", 
      "description": "速度与质量的平衡",
      "settings": {
        "hardware_acceleration": "auto",
        "encoding_preset": "fast",
        "crf_value": 23,
        "tune_setting": "film"
      }
    },
    "quality_priority": {
      "name": "质量优先",
      "description": "最佳质量，生成较慢",
      "settings": {
        "hardware_acceleration": "none",
        "encoding_preset": "slow",
        "crf_value": 18,
        "tune_setting": "film"
      }
    }
  },
  "system_recommendations": {
    "nvidia_gpu": {
      "recommendation": "使用NVENC硬件加速",
      "settings": {
        "hardware_acceleration": "nvenc",
        "encoding_preset": "fast"
      }
    },
    "intel_gpu": {
      "recommendation": "使用QSV硬件加速", 
      "settings": {
        "hardware_acceleration": "qsv",
        "encoding_preset": "veryfast"
      }
    },
    "amd_gpu": {
      "recommendation": "使用AMF硬件加速",
      "settings": {
        "hardware_acceleration": "amf", 
        "encoding_preset": "balanced"
      }
    },
    "cpu_only": {
      "recommendation": "使用软件编码",
      "settings": {
        "hardware_acceleration": "none",
        "encoding_preset": "medium"
      }
    }
  }
}