{
  "app": {
    "name": "Lrc2Video",
    "version": "2.0.0",
    "description": "歌词视频自动生成器",
    "theme": "light",
    "language": "zh-CN",
    "window_geometry": "800x600"
  },
  
  "ai": {
    "enabled": false,
    "provider": "openai",
    "max_tokens": 50,
    "temperature": 0.7
  },

  "video": {
    "resolution": "1920x1080",
    "fps": 30,
    "bitrate": "4000k",
    "hardware_acceleration": "none",
    "encoding_preset": "medium",
    "crf_value": 23,
    "tune_setting": "film",
    "thread_count": 0,
    "batch_size": 1
  },

  "lyrics": {
    "font_family": "Microsoft YaHei",
    "font_size": 24,
    "font_color": "#FFFFFF",
    "outline_width": 2,
    "outline_color": "#000000",
    "line_spacing": 1.5,
    "text_alignment": "center",
    "karaoke_mode": true,
    "highlight_color": "#FF6B6B",
    "margin_top": 100,
    "margin_bottom": 50
  },

  "paths": {
    "audio_folder": "",
    "output_folder": "output",
    "temp_folder": "temp",
    "logs_folder": "logs",
    "remember_folders": true
  },

  "performance_profiles": {
    "speed_priority": {
      "name": "速度优先",
      "description": "最快生成速度，文件较大",
      "settings": {
        "hardware_acceleration": "auto",
        "encoding_preset": "ultrafast",
        "crf_value": 28,
        "tune_setting": "fastdecode"
      }
    },
    "balanced": {
      "name": "平衡模式",
      "description": "速度与质量的平衡",
      "settings": {
        "hardware_acceleration": "auto",
        "encoding_preset": "fast",
        "crf_value": 23,
        "tune_setting": "film"
      }
    },
    "quality_priority": {
      "name": "质量优先",
      "description": "最佳质量，生成较慢",
      "settings": {
        "hardware_acceleration": "none",
        "encoding_preset": "slow",
        "crf_value": 18,
        "tune_setting": "film"
      }
    }
  },

  "system_recommendations": {
    "nvidia_gpu": {
      "hardware_acceleration": "nvenc",
      "encoding_preset": "fast"
    },
    "intel_gpu": {
      "hardware_acceleration": "qsv",
      "encoding_preset": "veryfast"
    },
    "amd_gpu": {
      "hardware_acceleration": "amf",
      "encoding_preset": "balanced"
    },
    "cpu_only": {
      "hardware_acceleration": "none",
      "encoding_preset": "medium"
    }
  }
}